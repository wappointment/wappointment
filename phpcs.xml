<?xml version="1.0"?>
<ruleset name="PSR2">    
<description>The PSR2 coding standard.</description>
<config name="installed_paths" value="vendor/phpcompatibility/php-compatibility" />
<rule ref="PSR2"/>
<rule ref="PHPCompatibility"/>
<config name="testVersion" value="7.0-"/>     
<file>app/</file>
<exclude-pattern>*/Achse</exclude-pattern>   
<exclude-pattern>*/ClassConnect/ClientSoftDeletes</exclude-pattern>   
<exclude-pattern>*/Messages/Template</exclude-pattern>  
<exclude-pattern>*/Services/Settings.php</exclude-pattern>
<exclude-pattern>*/Services/ViewsData.php</exclude-pattern>
<exclude-pattern>*/System/Status.php</exclude-pattern>
<exclude-pattern>*/Installation/Steps/SeedData.php</exclude-pattern>
<exclude-pattern>*/required.php</exclude-pattern>
<exclude-pattern>vendor</exclude-pattern>    
<exclude-pattern>resources</exclude-pattern>    
<exclude-pattern>database/</exclude-pattern>    
<exclude-pattern>storage/</exclude-pattern>    
<exclude-pattern>node_modules/</exclude-pattern>
<exclude-pattern>vendors</exclude-pattern>
<exclude-pattern>docs/</exclude-pattern>
</ruleset>